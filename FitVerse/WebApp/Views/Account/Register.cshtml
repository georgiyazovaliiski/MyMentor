@model WebApp.Models.RegisterViewModel
@{ 
    ViewBag.Title = "Регистрация";
}
<link rel="stylesheet" href="~/Content/demo.css">
<link rel="stylesheet" href="~/Content/form-register.css">
<div class="gradiented">
        <br />
        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-register", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <div class="form-register-with-email">
                <div class="form-white-background">
                    <div class="form-row">
                        <label>
                            <span>Име</span>
                            @Html.TextBoxFor(m => m.FirstName, new { placeholder = "Име" })
                            @Html.ValidationMessage("FirstName", "", new { @class = "text-danger" })
                        </label>
                    </div>
                    <div class="form-row">
                        <label>
                            <span>Фамилия</span>
                            @Html.TextBoxFor(m => m.LastName, new { placeholder = "Фамилия" })
                            @Html.ValidationMessage("LastName", "", new { @class = "text-danger" })
                        </label>
                    </div>
                    <div class="form-row">
                        <label>
                            <span>Email</span>
                            @Html.TextBoxFor(m => m.Email, new { placeholder = "Email" })
                            @Html.ValidationMessage("Email", "", new { @class = "text-danger" })
                        </label>
                    </div>
                    <div class="form-row">
                        <label>
                            <span>Пол</span>
                            @Html.DropDownList("Gender",
                                new SelectList(Enum.GetValues(typeof(Gender))))
                            @Html.ValidationMessage("Gender", "", new { @class = "text-danger" })
                        </label>
                    </div>
                    <div class="form-row">
                        <label>
                            <span>Age</span>
                            @Html.TextBoxFor(m => m.Age, new { placeholder = "Възраст" })
                            @Html.ValidationMessage("Age", "", new { @class = "text-danger" })
                        </label>
                    </div>
                    <div class="form-row">
                        <label>
                            <span>Парола</span>
                            @Html.PasswordFor(m => m.Password, new { placeholder = "Парола" })
                            @Html.ValidationMessage("Password", "", new { @class = "text-danger" })
                        </label>
                    </div>
                    <div class="form-row">
                        <label>
                            <span>Потвърди паролата</span>
                            @Html.PasswordFor(m => m.ConfirmPassword, new { placeholder = "Потвърди Парола" })
                            @Html.ValidationMessage("ConfirmPassword", "", new { @class = "text-danger" })
                        </label>
                    </div>
                    <div class="form-row">
                        <button type="submit">Регистрирай се</button>
                    </div>
                    <a href="@Url.Action("Login","Account")" class="form-log-in-with-existing">Вече си се регистрирал? Влез тук&rarr;</a>
                </div>
            </div>
        }</div>