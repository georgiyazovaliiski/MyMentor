@model List<FitVerse.Model.Models.Challenge>
<ul>
    <h8>Твоите предизвикателства за днес:</h8>
    <br />
    <br />
    @if (Model.Count != 0) {
        foreach (var c in Model)
        {
            <li style="padding-top:5pt; padding-bottom:5pt;" class="diarytext">
                <div class="row">
                    <div class="col-md-7 text-left">
                        <h3 class="diarytext" style="color:white">@c.Name.ToUpper()</h3> 
                    </div>
                    <div class="col-md-5 text-right">
                        <a href="@Url.Action("FinishChallenge", "Home", new { id = c.Id })" class="custombutton"><i class="fa fa-check" aria-hidden="true"></i></a>
                    </div>
                    <br />
                    <br />
                </div>
            </li>
        }
    }
    else
    {
        <li><h3 class="diarytext" style="color:white">Поздравления! Завършил си всички предизвикателства за днес!</h3></li>
    }
</ul>